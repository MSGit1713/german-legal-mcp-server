# German Legal MCP Server - Production Configuration

# Database Configuration
DB_PATH=./data/german_legal.db
DB_BACKUP_PATH=./data/backups/
DB_CACHE_SIZE=50000
DB_JOURNAL_MODE=WAL
DB_SYNCHRONOUS=NORMAL

# Search Configuration  
SEARCH_MAX_RESULTS=100
SEARCH_DEFAULT_RESULTS=20
SEARCH_CACHE_SIZE=100
SEARCH_CACHE_TTL=7200
SEARCH_SNIPPET_LENGTH=128
SEARCH_LEITSATZ_MAX_LENGTH=300

# Server Configuration
SERVER_NAME=german-legal-mcp-prod
SERVER_VERSION=1.0.0
LOG_LEVEL=INFO
MAX_CONCURRENT_SEARCHES=20

# Directories
DATA_DIR=./data
LOG_DIR=./logs

# Development overrides (uncomment for development)
# LOG_LEVEL=DEBUG
# SEARCH_CACHE_SIZE=10
# DB_CACHE_SIZE=5000
